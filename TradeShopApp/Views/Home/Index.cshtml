@model HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}
<div class="row pg-size">
    <div class="col-lg-3 pt-2 bg-light border-right">
        <h3>Categories:</h3>
        <partial name="CategoryPartial" model="@Model.CategoryTree" />
    </div>
    <div class="col-lg-9 bg-white container-fluid overflow-hidden">
        <div class="row mx-3 gy-5">
            @foreach (Product product in Model.ProductsDisplay.Take(4))
            {
                <partial name="ProductPartial" model="@product"/>
            }
        </div>
    </div>
</div>
