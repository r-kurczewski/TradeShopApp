@model HomeViewModel

@{
    ViewData["Title"] = "Home Page";
}
<div class="row flex-grow-1">
    <div class="col-lg-3 bg-light border-right">
        <h3>Categories:</h3>
        <partial name="CategoryPartial" model="@Model.CategoryTree" />
    </div>
    <div class="col-lg-9">
        <div class="container-fluid">
            <div class="row">
                @foreach (Product product in Model.ProductsDisplay)
                {
                    <partial name="ProductPartial" model="@product" />
                }
            </div>
        </div>
    </div>
</div>
